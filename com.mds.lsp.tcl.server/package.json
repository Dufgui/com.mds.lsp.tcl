{
    "name": "vscode-tcl",
    "displayName": "Tcl Language Support",
    "description": "Tcl support using the JTcl Interpreter",
    "icon": "tcl.png",
    "version": "0.0.1",
    "publisher": "dufgui",
    "repository": {
        "type": "git",
        "url": "https://github.com/Dufgui/vscode-jtcl.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.25.1"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "tcl"
    ],
    "activationEvents": [
        "onLanguage:tcl"
    ],
    "main": "./out/extension",
    "files": [
        "target/fat-jar.jar"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tcl",
                "aliases": [
                    "Tcl",
                    "tcl",
                    "Tcl/Tk",
                    "tcl/tk"
                ],
                "extensions": [
                    ".tcl"
                ],
                "configuration": "./tcl-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "tcl",
                "path": "./snippets/tcl.json"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "tclconfig.json",
                "url": "./lib/tclconfig.schema.json"
            }
        ],
        "configuration": {
            "title": "Java configuration",
            "properties": {
                "java.classPath": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Relative paths from workspace root to .jar files, .zip files, or folders that should be included in the Java class path"
                },
                "java.externalDependencies": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[^:]+:[^:]+:[^:]+(:[^:]+:[^:]+)?$"
                    },
                    "description": "External dependencies of the form groupId:artifactId:version or groupId:artifactId:packaging:version:scope"
                },
                "java.home": {
                    "type": "string",
                    "description": "Installation directory of Java 8"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "child-process-promise": "^2.2.1",
        "vscode-languageclient": "^4.3.0",
        "vscode-languageserver": "^4.3.0"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.10.21",
        "typescript": "^2.9.2",
        "vscode": "^1.1.18"
    }
}
